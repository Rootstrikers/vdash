<h2>Top Tweet Ideas</h2>

<ul class="social-media-ideas twitter-contents">
  <% @contents.each do |content| %>
    <li>
      <%= content.body %>
      <%= link_to posts_path(content_type: 'twitter', content_id: content.id), class: 'pull-right no-decoration', method: :post do %>
        <i class="icon-twitter-sign"></i>
      <% end %>
    </li>
  <% end %>
</ul>
