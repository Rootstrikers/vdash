<div class="navbar">
	<div class="navbar-inner">
		<ul class="nav nav-pills">
			<%= nav_item 'Home', root_path %>
		  <% if current_user %>
		    <%= nav_item 'Links', links_path %></li>
		    <%= nav_item 'Sign out', signout_path, id: 'sign_out' %>
		  <% end %>
		</ul>
		<div class="pull-right">
			<% if current_user %>
				<div class="btn-group">
				  <button class="btn"><%= link_to current_user.name, current_user %></button>
				  <button class="btn dropdown-toggle" data-toggle="dropdown">
				    <span class="caret"></span>
				  </button>
				  <ul class="dropdown-menu">
				    <li><%= link_to 'Sign out', signout_path %></li>
				  </ul>
				</div>
			<% else %>
				<%= link_to 'Sign in with Twitter', '/auth/twitter', id: 'sign_in', class: 'btn btn-primary' %>
			<% end %>
		</div>
	</div>
</div>
