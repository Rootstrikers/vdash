<div class="navbar">
	<div class="navbar-inner">
		<ul class="nav nav-pills">
			<%= nav_item 'Home', root_path %>
			<%= nav_item 'Submit Link', new_link_path %>
			<%= nav_item 'Vote on Links & Posts', links_path %>
			<%= nav_item 'Help', help_path %>
			<% if current_user.try(:admin?) %>
				<%= nav_item 'Top Ideas', admin_contents_path %>
				<%= nav_item 'Previous Posts', admin_posts_path %>
				<%= nav_item 'Notices', admin_notices_path %>
			<% end %>
		  <% if current_user %>
		    <%= nav_item 'Sign out', signout_path, id: 'sign_out' %>
		  <% end %>
		</ul>
		<div class="pull-right">
			<% if current_user %>
				<div class="btn-group">
				  <button class="btn">
				  	<i class="icon-user"></i>
				  	<%= link_to current_user.name, current_user %>
				  </button>
				  <button class="btn dropdown-toggle" data-toggle="dropdown">
				    <span class="caret"></span>
				  </button>
				  <ul class="dropdown-menu">
				    <li><%= link_to 'Sign out', signout_path %></li>
				  </ul>
				</div>
			<% else %>
				<%= link_to 'Sign in', '/signin', id: 'sign_in', class: 'btn btn-primary' %>
			<% end %>
		</div>
	</div>
</div>
