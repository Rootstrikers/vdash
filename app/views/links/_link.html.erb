<ul class="links-list">
  <li>
    <div class="row post-details">
      <div class="small-3 columns">
        <%= render partial: 'likes/like_status', locals: { item: link } %>
      </div><!-- small-3 columns -->

      <div class="small-9 columns">
        <p class="detail-title">
          <%= link_to link.display_name, link.url, target: '_blank' %> (opens in new window)
          <!-- TODO Make "opens in..." smaller or less bold or something -->
        </p>
        
        <p><%= link.summary %></p>
      </div><!-- small-9 columns -->
    </div><!-- row -->

    <div class="row">
      <div class="small-12 columns edit-post-section">
        <!--<%= pluralize link.contents.count, 'Post Idea' %>-->
  	     <div class='more-info'>
          <a class='more-info-toggle' href='#'>
            <h4 class="more-info-title">
              Post Ideas...<i class='icon-chevron-down'></i>
            </h4>
            <h4 class='opened-message more-info-title'>Hide <i class='icon-chevron-up'></i></h4>
          </a>
          <div class='more-info-content'>
            <% if link.top_contents.size > 0 %>
              <ul class="social-media-ideas mixed-contents">
                <%= render link.top_contents %>
              </ul>
              <a href="/links/<%= link.id %>/contents/new">Write a new post</a>
            <% else %>
              This article doesn't have any posts yet. <a href="/links/<%= link.id %>/contents/new">Write one!</a>
            <% end %>
          </div><!-- more-info-content -->
        </div><!-- more-info -->

      	  <% if current_user.try(:admin?) %>
            <div class="delete-link">
              Admin:
              <%= link_to link, method: :delete, class: 'no-decoration', data: { confirm: 'Are you sure you want to delete this link?' } do %>
                <i class="icon-trash"></i>
            </div>
            <% end %>
          <% end %>
      </div><!-- submitter-info -->
    </div>
  </li>
</ul>