<% if current_user.try(:admin?) %>
  <%= link_to 'Admin: <i class="icon-trash"></i>  Deleted Links'.html_safe, admin_deleted_things_links_path, class: 'button btn-deleted-links pull-right' if current_user.try(:admin?) %>
<% end %>

<div class="row">  
  <section class="small-12 columns content-box">
      <header class='section-header'>
        <img src="/assets/?" class='header-icon ?'>
        <h2 class="section-title">Spread the Word</h2>
        <%= link_to '<span>+</span> Suggest Article'.html_safe, new_link_path, class: 'button btn-submit-link' %>
      </header>
      <div class='more-info'>
        <a class='more-info-toggle' href='#'>
          <h4 class="more-info-title">
            <i class='icon-info-sign'></i>Need a little more information? Click here.
          </h4>
          <h4 class='opened-message more-info-title'><i class='icon-minus-sign'></i>Hide</h4>
        </a>
        <div class='more-info-content'>
          <h3>How This Works</h3>
          <p>Vote on links.</p>
          <p>.</p>
        </div>
      </div>
      
      <p>Take a look at links that people have submitted and help chose the most important ones to share with everyone.</p>
        <ul>
          <%= render @links %>
        </ul>
      <%= will_paginate @links %>
  </section><!-- small-12 columns content-box -->
</div><!-- row -->
