<div class="row">
  <section class="small-12 columns content-box">
      <header class='section-header'>
        <img src="/assets/tile_grey.jpeg" class='header-icon'>
        <h2 class="section-title">
          <%= @user.name %>'s profile
          <% if @user == current_user %>
            [<%= link_to 'edit', edit_user_path(current_user) %>]
          <% end %>
        </h2>
        <div class="pull-right">
          <% if @user.admin? %>
            <div class="label">Admin</div>
          <% end %>
        </div>
      </header>
        <%= render 'admin_tools' if current_user.try(:admin?) %>
        <%= render 'banned' if @user.banned? %>
        <%= render 'contact_info' if current_user and @user.public_contact_information? %>

        <% if @links.any? %>
          <h6>Submitted Links</h6>
          <ul>
            <%= render @links %>
          </ul>
        <% end %>

        <% if @contents.any? %>
          <h6>Submitted Headline Ideas</h6>

          <ul class="mixed-contents">
            <%= render @contents %>
          </ul>
        <% end %>
  </section><!-- small-12 columns content-box -->
</div><!-- row -->




