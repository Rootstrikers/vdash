<div class="row">
    <div class="small-12 small-centered columns home-blurb">
        <h3>Thousands of Rootstrikers. Voices amplified. Speaking together.</h3>
    </div>
</div>
<ul class="small-block-grid-1 large-block-grid-3 home-options">

    <li>
        <%= link_to contents_path, class: 'button btn-home' do %>
            <img src="/assets/write.png" class="home-preview">
            <h5>Preview</h5>
        <% end %>
    </li>

  <li>
    <%= link_to links_path(anchor: 'articles', write: true), class: 'button btn-home' do %>
      <img src="/assets/crayon_mine.svg" class="home-write">
      <h5>Write</h5>
    <% end %>
  </li>
    <li>
        <%= link_to links_path(anchor: 'suggest'), class: 'button btn-home' do %>
            <img src="/assets/axe_white.svg" type="image/svg+xml" class="home-axe">
            <h5>Share</h5>
        <% end %>
    </li>
</ul>

<% unless current_user %>
  <div class="row">
      <div class="small-12 small-centered columns home-blurb">
          <h3>Sign in with your Twitter, Facebook, or Google account to get started.</h3><br/>
          <p>
              <a href="/auth/twitter">
                  <img src="/assets/twitter-logo.png" height="80em" width="80em" alt="Twitter logo"/>
                              </a>            <a href="/auth/facebook">
                  <img src="/assets/facebook-logo.png" height="80em" width="80em" alt="Facebook logo">

              </a>
              <a href="/auth/google_oauth2">
                  <img src="/assets/google-logo.png" height="80em" width="80em" alt="Google logo">

              </a>
          </p>

      </div>
  </div>
<% end %>


