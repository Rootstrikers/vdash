<div class="row">  
  <section class="small-12 columns content-box">
      <header class='section-header'>
        <img src="/assets/?" class='header-icon ?'>
        <h2 class="section-title">Top Post Ideas</h2>
        <%= link_to '- Deleted Ideas', admin_deleted_things_contents_path, class: 'button btn-section-header' %>
      </header>
      <div class='more-info'>
        <a class='more-info-toggle' href='#'>
          <h4 class="more-info-title">
            <i class='icon-info-sign'></i>Need a little more information? Click here.
          </h4>
          <h4 class='opened-message more-info-title'><i class='icon-minus-sign'></i>Hide</h4>
        </a>
        <div class='more-info-content'>
          <p>Displayed below are the current to post idea's voted on by rootstrikers.</p>
        </div>
      </div>              
      
      <ul class="social-media-ideas mixed-contents">
        <% @contents.each do |content| %>
          <li>
            <div class="pull-left">
              <%= link_to admin_posts_path(type: 'facebook', content_id: content.id), class: 'pull-right no-decoration', method: :post do %>
                <i class="icon-facebook-sign"></i>
              <% end %>
              <%= link_to admin_posts_path(type: 'twitter', content_id: content.id), class: 'pull-right no-decoration', method: :post do %>
                <i class="icon-twitter-sign"></i>
              <% end if content.valid_for_twitter? %>
            </div>
            <%= content.body %>
            <br />
            <%= link_to content.link_domain, content.link_url %>
            <div class="pull-right">
              <%= link_to link_content_path(link_id: content.link.id, id: content.id), method: :delete, class: 'no-decoration', data: { confirm: 'Are you sure you want to delete this idea?' } do %>
                <i class="icon-trash"></i>
              <% end %>
            </div>
          </li>
        <% end %>
      </ul>

  </section><!-- small-12 columns content-box -->
</div><!-- row -->



