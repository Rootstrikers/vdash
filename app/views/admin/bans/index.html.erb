<h2>
  All Historical Bans
</h2>

<table class="table">
  <thead>
    <tr>
      <th>User</th>
      <th>Timestamp</th>
      <th>Lifted At</th>
      <th>Duration</th>
      <th>Reason</th>
      <th>Banned By </th>
    </tr>
  </thead>
  <tbody>
    <% @bans.each do |ban| %>
    <tr>
      <td><%= link_to ban.user.name, [:admin, ban.user] %></td>
      <td><%= ban.created_at %></td>
      <td><%= ban.lifted_at %></td>
      <td><%= distance_of_time_in_words(ban.created_at, (ban.lifted_at || Time.now)) %></td>
      <td><%= ban.reason %></td>
      <td><%= link_to ban.created_by_name, [:admin, ban.created_by] %></td>
    </tr>
    <% end %>
  </tbody>
</table>
